{
  "version": 2,
  "builds": [
    {
      "src": "api/*",
      "use": "@vercel/node"
    },
    {
      "src": "/*",
      "use": "@vercel/next",
      "config": {
        "prisma": {
          "generate": true
        }
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
